<div id="main" class="wrapper">

  <header class="header">
    <img src="burgerapp2.jpg" alt="Burger"/>
    <h1>Eat-Da-Burger!</h1>
  </header>

  {{#if burgers}}
  <div class="left-content">
    <h2>Ready to Serve</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=0}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="right-content">
    <h2>Devoured</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=1}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
  {{/if}}

  <!--h2>Add a Burger</h2-->
  <form id="form-burger" method="POST" action="/api/burgers" class="add-burgers">

    <div class="form-group">
      <!--label for="burg">Burger</label-->
      <textarea id="burg" name="burger_name" maxlength="30" placeholder="Burger Name..." rows="2" cols="50" required></textarea>
    </div>
    <div class="form-group">
      <!--label for="customername">Name</label-->
      <input type="text" id="customername" name="customer_name" size="48" placeholder="Name for Order..." maxlength="30" required></input>
    </div>

    <button id="burger-submit" type="submit">Submit</button>
    <p>Enter a burger you want to eat and your name.  Click the "Submit" button.</p>

  </form>

</div>